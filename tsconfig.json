{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ],
    "sourceMap": true,
    "experimentalDecorators": true,
    "strict": true,
    "baseUrl": ".",
    "allowJs": true,
    "noUnusedLocals": true,
    "outDir": "ts-gen",
    "typeRoots" : ["./node_modules/@types", "./spec/node_modules/@types"],
    "paths": {
      "@electron/internal/*": ["lib/*"],
      "@node/*": ["../third_party/electron_node/*"]
    }
  },
  "exclude": [
    "electron.d.ts"
  ],
}
