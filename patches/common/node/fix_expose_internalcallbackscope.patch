+++ b/src/node_internals.h
@@ -198,7 +198,7 @@ v8::MaybeLocal<v8::Value> InternalMakeCallback(
     v8::Local<v8::Value> argv[],
     async_context asyncContext);
 
-class InternalCallbackScope {
