+void BindingData::OverrideReadFileSync(const FunctionCallbackInfo<Value>& args) {
+  Realm* realm = Realm::GetCurrent(args);
+  CHECK(args[0]->IsFunction());
+  realm->set_modules_read_file_sync(args[0].As<Function>());
+}
